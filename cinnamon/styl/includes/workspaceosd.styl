// main: ../cinnamon.styl

/* ===================================================================
 * Workspace OSD
 * ===================================================================*/
.workspace-osd
  $background('base',$alphaBase())
  color: $text()
  border-radius: $radius()
  $boxShadow()
  font-size: 12pt
  padding: 20px

.expo-workspaces-name-entry
  padding: 8px
  color: $text()
  border-radius: 3px
  $background('base',$alphaBase())
  $boxShadow()
  selection-background-color: #d7d7d7
  selected-color: #fff
  caret-color: $text()
  caret-size: 1px
  text-align: center
  height: 15px

.expo-workspaces-name-entry#selected
  $background('base',$alphaBase())

.expo-workspaces-name-entry:focus
  selected-color: $text()
  selection-background-color: $color('base')
