// main: ../cinnamon.styl
/* ===================================================================
 * Notification Applet
 * ===================================================================*/
.notification-applet-padding
  padding: .5em 1em

.notification-applet-container
  max-height: 100px

/* Check Boxes */
.check-box CinnamonGenericContainer
  spacing: .2em

.check-box StBin
  width: 16px
  height: 16px
  background-image: url("check.png")

.check-box:focus StBin
  background-image: url("check.png")

.check-box:checked StBin
  background-image: url("check-active.png")

.check-box:focus:checked StBin
  background-image: url("check-active.png")

.check-box StLabel
  font-weight: normal

.radiobutton CinnamonGenericContainer
  spacing: .2em
  height: 20px
  padding-top: 2px

.radiobutton StBin
  width: 16px
  height: 16px
  background-image: url("radio.png")
  border-radius: 15px

.radiobutton:focus StBin
  background-image: url("radio.png")

.radiobutton:checked StBin
  background-image: url("radio-active.png")

.radiobutton:focus:checked StBin
  background-image: url("radio-active.png")

.radiobutton StLabel
  padding-top: 4px
  font-size: 9pt
  box-shadow: none

