.overview-icon
  border-radius: 4px
  padding: 3px
  border: 1px rgba(0,0,0,0)
  font-size: 7.5pt
  color: white
  transition-duration: 100
  text-align: center
  $backgroundBase(0.8)

.expo-background
  $backgroundBase()

.expo-workspace-thumbnail-frame
  border: 0px
  box-shadow: #000 0px 8px 12px 0px

