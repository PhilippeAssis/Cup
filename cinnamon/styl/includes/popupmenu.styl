// main: ../cinnamon.styl
/* ===================================================================
 * PopupMenu (popupMenu.js)
 * ===================================================================*/
.popup-menu-boxpointer
  -arrow-border-radius: 10px
  -arrow-background-color: #F5F5F5
  -arrow-border-width: 1px
  -arrow-border-color: #C8C5C5
  -arrow-base: 25px
  -arrow-rise: 11px

.popup-menu
  color: #333
  font-size: 9pt
  min-width: 100px

.popup-submenu-menu-item:open
  background-color: #d7d7d7

.popup-sub-menu
  background-gradient-start: #f5f5f5
  background-gradient-end: #f8f8f8
  background-gradient-direction: vertical

.popup-sub-menu .popup-menu-item:ltr
  padding-right: 0em

.popup-sub-menu .popup-menu-item:rtl
  padding-left: 0em

.popup-sub-menu StScrollBar
  padding: 4px

.popup-sub-menu StScrollBar StBin#trough
  border-width: 0px

.popup-sub-menu StScrollBar StBin#vhandle
  background-color: #4c4c4c
  border-width: 0px

.popup-combo-menu
  background-color: #f5f5f5
  padding: 1em 0em
  color: #333
  font-size: 9pt
  border: 1px solid #aaa
  border-radius: 3px

/* The remaining popup-menu sizing is all done in ems, so that if you
 * override .popup-menu.font-size, everything else will scale with it.
 */
.popup-menu-content
  padding: 1em 0em

.popup-menu-item
  padding: .5em 2em
  spacing: 1em

.popup-menu-item:active
  background-color: #d7d7d7

.popup-menu-item:insensitive
  color: #999

.popup-image-menu-item
  color: #333

.popup-combobox-item
  spacing: 1em

.popup-separator-menu-item
  height: 1px
  background-color: #d0d0d0

.popup-alternating-menu-item:alternate
  font-weight: bold

.popup-slider-menu-item
  height: 1em
  min-width: 15em
  -slider-height: 4px
  -slider-background-color: #aaa
  -slider-border-color: transparent
  -slider-active-background-color: #555
  -slider-active-border-color: transparent
  -slider-border-width: 0px
  -slider-handle-radius: 0.5em

.popup-device-menu-item
  spacing: .5em

.popup-inactive-menu-item
  font-weight: normal
  color: #aaa

.popup-subtitle-menu-item
  font-weight: bold

.popup-menu-icon
  icon-size: 16px

/* Switches (to be used in menus) */
.toggle-switch
  width: 64px
  height: 22px

.toggle-switch-us
  background-image: url("switch.png")

.toggle-switch-us:checked
  background-image: url("switch-on.png")

.toggle-switch-intl
  background-image: url("switch.png")

.toggle-switch-intl:checked
  background-image: url("switch-on.png")

.nm-menu-item-icons
  spacing: .5em
